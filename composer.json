{
    "name": "medlib-v2/medlib",
    "description": "A librarian application for researchers and students",
    "keywords": [
        "library",
        "book",
        "search"
    ],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=5.5.9",
        "laravel/framework": "5.2.*",
        "laravelcollective/bus": "5.2.*",
        "laravelcollective/html": "^5.2",
        "medlib/helpers": "dev-master",
        "medlib/yaz": "dev-master",
        "medlib/marcxml": "dev-master",
        "danmichaelo/quitesimplexmlelement": "~0.2.4",
        "greggilbert/recaptcha": "^2.1",
        "nesbot/Carbon": "^1.21",
        "phpspec/phpspec": "^2.4",
        "intervention/image": "dev-master",
	"pusher/pusher-php-server": "^2.6.2",
        "wisembly/elephant.io": "3.0.0"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "5.2.*",
        "laracasts/testdummy": "~2.0",
        "symfony/css-selector": "2.8.*|3.0.*",
        "symfony/dom-crawler": "2.8.*|3.0.*",
        "barryvdh/laravel-ide-helper": "~2.2",
        "barryvdh/laravel-debugbar": "~2.2"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "Medlib\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "pre-update-cmd": [
            "php artisan clear-compiled"
        ],
        "post-update-cmd": [
            "php artisan optimize"
        ]
    },
    "config": {
        "preferred-install": "dist"
    },
	"minimum-stability": "dev"
}
