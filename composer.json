{
    "name": "medlib-v2/medlib",
    "description": "A librarian application for researchers and students",
    "keywords": ["framework", "medlib"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=5.5.9",
        "medlib-v2/framework": "master"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~4.0",
        "phpspec/phpspec": "~2.1"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "application/src"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"copy('.development.example', '.development');\""
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
