{
  "presets": [
    ["es2015", { "modules": false }],
    "stage-2"
  ],
  "plugins": ["transform-runtime"],
  "comments": false,
  "env": {
    "testing": {
      "plugins": ["istanbul", {
        "exclude": [
          "**/*.spec.js",
          "resources/assets/js/*.js",
          "resources/assets/js/Components/**/*.(js|vue)",
          "resources/assets/test/unit/*.js"
        ]
      }]
    }
  }
}